<h1><%= @topic.title %></h1>

<p><%= @topic.content %></p>

<p>Do you think this topic is...</p>

<%= form_for @score, remote:true, :data => {topic_id: @topic.id} do |f| -%>
<table>
  <tr><th></th>
      <th>Strongly Disagree</th>
      <th>Disagree</th>
      <th>Neutral</th>
      <th>Agree</th>
      <th>Strongly Agree</th></tr>
<tr>
    <%= f.hidden_field :topic_id, :value => @topic.id %>
    <td><%= f.label :specific, "Specific" %></td>
    <td><%= f.radio_button :specific, "-2" %></td>
    <td><%= f.radio_button :specific, "-1" %></td>
    <td><%= f.radio_button :specific, "0" %></td>
    <td><%= f.radio_button :specific, "1" %></td>
    <td><%= f.radio_button :specific, "2" %></td></tr>

<tr>
    <td><%= f.label :actionable, "Actionable" %></td>
    <td><%= f.radio_button :actionable, "-2" %></td>
    <td><%= f.radio_button :actionable, "-1" %></td>
    <td><%= f.radio_button :actionable, "0" %></td>
    <td><%= f.radio_button :actionable, "1" %></td>
    <td><%= f.radio_button :actionable, "2" %></td></tr>

<tr>
    <td><%= f.label :kind, "Kind" %></td>
    <td><%= f.radio_button :kind, "-2" %></td>
    <td><%= f.radio_button :kind, "-1" %></td>
    <td><%= f.radio_button :kind, "0" %></td>
    <td><%= f.radio_button :kind, "1" %></td>
    <td><%= f.radio_button :kind, "2" %></td></tr>
</table>
    <%= f.submit "Submit"%>
<% end -%>

<h3>Comments</h3>
<% @topic.comments.each do |comment| %>
  <%= comment.content %><br>
<% end %>

<h3>Add a Comment</h3>

<%= form_for @comment do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %><br />
  <%= f.hidden_field :topic_id, value: @topic.id %>
  <%= f.submit "Save" %>
<% end %>
